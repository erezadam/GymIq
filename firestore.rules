rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isTrainer() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['trainer', 'admin'];
    }

    // ============ USERS ============
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isOwner(userId);

      // Allow checking if collection is empty (for first user = admin logic)
      allow list: if isAuthenticated();

      // Users can create their own profile on registration
      allow create: if isOwner(userId);

      // Trainers can create user profiles (for trainee registration)
      allow create: if isTrainer();

      // Users can update their own profile (but not role)
      allow update: if isOwner(userId) &&
        (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']));

      // Only admins can delete users
      allow delete: if isAdmin();

      // Admins can read all users
      allow read: if isAdmin();

      // Admins can update any user including role
      allow update: if isAdmin();

      // Trainers can read user profiles (app filters to own trainees)
      allow read: if isTrainer();
    }

    // ============ MUSCLES ============
    match /muscles/{muscleId} {
      // Anyone can read muscles
      allow read: if true;

      // Only admins can write
      allow create, update, delete: if isAdmin();
    }

    // ============ EQUIPMENT ============
    match /equipment/{equipmentId} {
      // Anyone can read equipment
      allow read: if true;

      // Only admins can write
      allow create, update, delete: if isAdmin();
    }

    // ============ REPORT TYPES ============
    match /reportTypes/{reportTypeId} {
      // Anyone can read report types
      allow read: if true;

      // Only admins can write
      allow create, update, delete: if isAdmin();
    }

    // ============ BAND TYPES ============
    match /bandTypes/{bandTypeId} {
      // Anyone can read band types
      allow read: if true;

      // Only admins can write
      allow create, update, delete: if isAdmin();
    }

    // ============ EXERCISE SETS ============
    match /exerciseSets/{setId} {
      // Anyone can read exercise sets
      allow read: if true;

      // Only admins can write
      allow create, update, delete: if isAdmin();
    }

    // ============ EXERCISES ============
    match /exercises/{exerciseId} {
      // Anyone can read exercises (for initial load before auth)
      allow read: if true;

      // Allow create if no exercises exist (initial seeding) OR if admin
      allow create: if isAdmin();

      // Only admins can update/delete exercises
      allow update, delete: if isAdmin();
    }

    // ============ WORKOUT SESSIONS ============
    match /workoutSessions/{sessionId} {
      // Users can read their own workout sessions
      allow read: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;

      // Users can create their own workout sessions
      allow create: if isAuthenticated() &&
        request.resource.data.userId == request.auth.uid;

      // Users can update their own workout sessions
      allow update: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;

      // Users can delete their own workout sessions
      allow delete: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;

      // Trainers can read their trainees' sessions (if trainee relationship exists)
      // TODO: Implement trainer-trainee relationship
    }

    // ============ WORKOUT HISTORY ============
    match /workoutHistory/{historyId} {
      // Users can read their own workout history
      allow read: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;

      // Users can create their own workout history
      allow create: if isAuthenticated() &&
        request.resource.data.userId == request.auth.uid;

      // Users can update their own workout history
      allow update: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;

      // Users can delete their own workout history
      allow delete: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;

      // Trainers can read workout history (app filters to own trainees)
      allow read: if isTrainer();

      // Trainers can create/update workouts they report for trainees
      allow create: if isTrainer() &&
        request.resource.data.reportedBy == request.auth.uid;
      allow update: if isTrainer() &&
        resource.data.reportedBy == request.auth.uid;
    }

    // ============ WORKOUT TEMPLATES ============
    match /workoutTemplates/{templateId} {
      // Anyone authenticated can read public templates
      allow read: if isAuthenticated() &&
        (resource.data.isPublic == true || resource.data.createdBy == request.auth.uid);

      // Trainers and admins can create templates
      allow create: if isTrainer();

      // Only template owner or admin can update/delete
      allow update, delete: if isAuthenticated() &&
        (resource.data.createdBy == request.auth.uid || isAdmin());
    }

    // ============ TRAINEE-TRAINER RELATIONSHIPS ============
    match /trainerRelationships/{relationshipId} {
      // Both trainer and trainee can read
      allow read: if isAuthenticated() &&
        (resource.data.trainerId == request.auth.uid ||
         resource.data.traineeId == request.auth.uid);

      // Trainers can create relationships
      allow create: if isTrainer() &&
        request.resource.data.trainerId == request.auth.uid;

      // Both parties can update (for acceptance/status)
      allow update: if isAuthenticated() &&
        (resource.data.trainerId == request.auth.uid ||
         resource.data.traineeId == request.auth.uid);

      // Both parties can delete
      allow delete: if isAuthenticated() &&
        (resource.data.trainerId == request.auth.uid ||
         resource.data.traineeId == request.auth.uid);

      // Admin can read/write all relationships
      allow read, write: if isAdmin();
    }

    // ============ TRAINING PROGRAMS ============
    match /trainingPrograms/{programId} {
      // Trainer and trainee can read their programs
      allow read: if isAuthenticated() &&
        (resource.data.trainerId == request.auth.uid ||
         resource.data.traineeId == request.auth.uid ||
         isAdmin());

      // Trainers can create programs for their trainees
      allow create: if isTrainer() &&
        request.resource.data.trainerId == request.auth.uid;

      // Trainer or admin can update programs
      allow update: if isAuthenticated() &&
        (resource.data.trainerId == request.auth.uid || isAdmin());

      // Trainer or admin can delete programs
      allow delete: if isAuthenticated() &&
        (resource.data.trainerId == request.auth.uid || isAdmin());
    }

    // ============ TRAINER MESSAGES ============
    match /trainerMessages/{messageId} {
      // Trainer and trainee can read messages between them
      allow read: if isAuthenticated() &&
        (resource.data.traineeId == request.auth.uid ||
         resource.data.trainerId == request.auth.uid ||
         isAdmin());

      // Trainers can create messages
      allow create: if isTrainer() &&
        request.resource.data.trainerId == request.auth.uid;

      // Trainee can only update isRead/readAt/replies
      allow update: if isAuthenticated() &&
        resource.data.traineeId == request.auth.uid &&
        request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['isRead', 'readAt', 'replies']);

      // Trainer can update their own messages (edit, add replies)
      allow update: if isAuthenticated() &&
        (resource.data.trainerId == request.auth.uid || isAdmin());

      // Trainer or admin can delete messages
      allow delete: if isAuthenticated() &&
        (resource.data.trainerId == request.auth.uid || isAdmin());
    }

    // ============ AI TRAINER USAGE (Rate Limiting) ============
    match /aiTrainerUsage/{usageId} {
      // Only Cloud Functions can read/write (via Admin SDK)
      // Users can read their own usage for displaying remaining count
      allow read: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;

      // No direct client writes - only via Cloud Functions
      allow create, update, delete: if false;
    }
  }
}
